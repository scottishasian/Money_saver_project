<div class="Home">
<h1>Add a new type here.</h1>

<form method="post" action="/types">
  <label for="type-field">Enter New Type:</label>
    <input type="text" name="type_name" id="type-field"/>
  <input type="submit" value="Add type">
</form>
</div>




<div class="small_tb">
<p> Here is your list of types.<p>
<table>
  <thead>
    <tr>
      <th>Type Name</th>
    </tr>
  </thead>
  <tbody>
    <tr>
    <% @types.each do |type| %>
<form method="post" action="/types/<%= type.id %>/delete">
    <td> <%= type.type_name %> </td>
    <td><input type="submit" value="Delete"/></td>
</form>
  </tr>
  </tbody>
  <% end %>
</table>
</div>
